<section>


  <div class="container">
    <div class="ro mt-4 mb-3 d-flex justify-content-end">
      <a href="/admin/addproducts" class="btn btn-dark mt-3">Add Products</a>
    </div>
    <div class="table-responsive">
      <table class="table table-dark mt-4" id="productsTable">
        <thead>
          <tr>
            <th scope="col">NO</th>
            <th scope="col">Product Name</th>
            <th scope="col">Brand</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Quantity</th>
            <th scope="col">image</th>
            <th scope="col">action</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td scope="row">{{@index}}</td>
            <td scope="row">{{this.title}}</td>
            <td scope="row">{{this.brand}}</td>
            <td scope="row">{{this.price}}</td>
            <td scope="row">{{this.category}}</td>
            <td scope="row">{{this.quantity}}</td>
            <td scope="row"><img style="width: 50px;height: 50px;" src="/product-images/{{this.images.[0].filename}}"
                alt="" />
            </td>
            <td>
              <a href="/admin/editProducts/{{this._id}}" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you want to delete{{this.title}} ') "><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#productsTable').dataTable()
  })

</script>