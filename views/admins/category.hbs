<section>
    <div class="container mt-4">
        <div class="float-end mb-2">
            <button type="button" class="btn btn-success mt-4" data-bs-toggle="modal" data-bs-target="#exampleModal">Add
                Category
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Status</h5>
                            <button type="button" class="close btn btn-dark" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/admin/addCategory" method="post">
                                <input type="text" name="category" id="disabledTextInput" class="form-control"
                                    placeholder="Add Category">
                                <button class="btn btn-success mt-3" type="submit">Done</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-light table-striped" id="orderTable">
            <thead>
                <tr>

                    <th scope="col-md-3">index</th>
                    <th scope="col-md-3">Category</th>
                    <th scope="col-md-3">Option</th>

                </tr>
            </thead>
            <tbody>
                {{#each categorys}}
                <tr>


                    <td scope="row" style="width: 14rem;">{{@index}}</td>
                    <td scope="row" style="width: 14rem;">{{this.category}}</td>
                    <td scope="row" style="width: 14rem;"><a href="/admin/delete-category/{{this._id}}" class="btn"
              onclick="return confirm('Are you want to delete{{this.category}} ') "><i class="bi bi-trash"></i></a></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#orderTable').dataTable()
    })
</script>